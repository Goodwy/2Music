        <item name="android:windowSharedElementsUseOverlay">false</item>
    </style>

    <style name="Theme.2Music.Black" parent="Theme.2Music.Base.Black">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
    </style>

