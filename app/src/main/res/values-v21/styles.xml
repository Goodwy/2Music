        <item name="android:windowSharedElementsUseOverlay">false</item>
    </style>

    <style name="Theme.2Music.Notification" parent="@android:style/TextAppearance.Material.Notification" />

    <style name="Theme.2Music.Notification.Title" parent="@android:style/TextAppearance.Material.Notification.Title" />

    <style name="Fab" parent="FabParent">
        <item name="android:transitionName">@string/transition_fab</item>
    </style>

    <style name="MusicProgressSlider" parent="MusicProgressSliderParent">
        <item name="android:padding">0dp</item>
